<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFlix.Categorias.acao"
             Title="acao">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300,300,300" ColumnDefinitions="*,*" Padding="5">
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" Source="miranha.jpg" x:Name="btnMiranha" Clicked="btnMiranha_Clicked" />

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" Source="velozesdez.jpg" x:Name="btnValozesdez" Clicked="btnValozesdez_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1" Source="esquadraoseis.jpg" x:Name="btnEsquadraoseis" Clicked="btnEsquadraoseis_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>