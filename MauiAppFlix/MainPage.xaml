<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFlix.MainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="EstiloComum" TargetType="Button">
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="FontSize" Value="40"/>
                <Setter Property="TextColor" Value="Black"/>
            </Style>

            <Style x:Key="Botao" TargetType="Button" BasedOn="{StaticResource EstiloComum}">
                <Setter Property="BackgroundColor" Value="CornflowerBlue"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid RowDefinitions="*, *"
              ColumnDefinitions="*, *">
              
              <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource Botao}" x:Name="Aventura" Clicked="Aventura_Clicked"/>
              <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource Botao}" x:Name="Ação" Clicked="Ação_Clicked"/>

              <Button Grid.Row="2" Grid.Column="0" Style="{StaticResource Botao}" x:Name="Romance" Clicked="Romance_Clicked"/>
        </Grid>
    </ContentPage.Content>
    

</ContentPage>